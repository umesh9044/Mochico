<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    android:id="@+id/setting_Layout"
    <include layout="@layout/toolbar_right" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/margin_3"
        android:text="User Barcode:"
        android:paddingBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_size_18" />
    <EditText
        android:id="@+id/txtUserBarCode"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/drawable_text"
        android:gravity="start|center"
        android:hint="Scan User Barcode...."
        android:imeOptions="actionNone"
        android:inputType="text"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:minLines="1"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:keepScreenOn="false"
        android:textColorHint="@color/colorimageTint"
        android:textCursorDrawable="@drawable/cursor_text"
        android:textSize="@dimen/text_size_17" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_10"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_3"
            android:text="User Name:"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/lblUserName"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/drawable_text"
            android:gravity="start|center"
            android:minLines="1"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorimageTint"
            android:textSize="@dimen/text_size_17" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_10"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_3"
            android:text="Type Of Work:"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/lblTypeOfWork"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/drawable_text"
            android:gravity="start|center"
            android:minLines="1"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorimageTint"
            android:textSize="@dimen/text_size_17" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/btn_primary"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:shadowColor="@color/colorPrimary"
        android:shadowDx="0"
        android:shadowDy="0"
        android:text="Submit"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_15"
        android:layout_marginTop="@dimen/padding_20"/>

</LinearLayout>